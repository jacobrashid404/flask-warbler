{% macro build_message_list(messages) %}

{% for msg in messages %}
<li class="list-group-item">
  {% if msg.user_id != g.user.id %}
  {% if msg.id not in g.user.liked_messages_ids %}
  <form action="/messages/{{ msg.id }}/like" method="POST" class="like-message">
    {{ g.csrf_form.hidden_tag() }}
    {# <input name='url' type="hidden" value="{{ url_for(request.endpoint, request.user_id) }}"> FIXME: need real url#}
    {# include form origin url as hidden field #}
    <button class="btn"><i class="bi bi-star"></i></button>
  </form>
  {% endif %}
  {% if msg.id in g.user.liked_messages_ids %}
  <form action="/messages/{{ msg.id }}/unlike" method="POST" class="like-message">
    {{ g.csrf_form.hidden_tag() }}
    <input name='url' type="hidden" value="{{ url_for(request.endpoint) }}">
    <button class="btn"><i class="bi bi-star-fill gold"></i></button>
  </form>
  {% endif %}
  {% endif %}

  <a href="/messages/{{ msg.id }}" class="message-link">
    <a href="/users/{{ msg.user.id }}">
      <img src="{{ msg.user.image_url }}" alt="" class="timeline-image">
    </a>
    <div class="message-area">
      <a href="/users/{{ msg.user.id }}">@{{ msg.user.username }}</a>
      <span class="text-muted">{{ msg.timestamp.strftime('%d %B %Y') }}</span>
      <p>{{ msg.text }}</p>
    </div>
</li>

{% endfor %}

{% endmacro %}